.dashboard {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 1rem;
  background-color: #7a6ed5;
  box-sizing: border-box;
  box-shadow: 0 -0.1rem 0.2rem #303030;
  height: 3rem;
}
.dashboard .buttons {
  position: absolute;
  bottom: 0.1rem;
  left: 0;
  width: 100%;
}
.dashboard .buttons button {
  float: left;
  width: 25%;
  height: 3rem;
  font-size: 1.3rem;
  color: white;
  outline: none;
  background-color: transparent;
  border-radius: 0;
  margin: 0;
  padding: 0;
}
.dashboard .buttons button:last-child {
  border-right-width: 1px;
}
.dashboard .buttons button:focus {
  outline: 0;
}
