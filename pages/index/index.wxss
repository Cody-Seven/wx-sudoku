/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 568rpx;
  background: #8569dd;
  width: 100%;
  position: relative;
  box-shadow: 0px 5px 15px #8569dd;
}

.userinfo-background-left {
  position: absolute;
  border-radius: 50rpx;
  left: -250rpx;
  top: 10rpx;
  width: 568rpx;
  height: 568rpx;
  background: radial-gradient(#7a6ed5, #4f3dbe);
  transform: rotate(45deg);
}

.userinfo-background-top {
  position: absolute;
  border-radius: 30rpx;
  right: 100rpx;
  top: -142rpx;
  width: 284rpx;
  height: 284rpx;
  background: radial-gradient(#7a6ed5, #4f3dbe);
  transform: rotate(45deg);
}

.userinfo-wrap {
  position: absolute;
  z-index: 2;
  width: 100%;
  height: 500rpx;
  margin: 0 auto;
  text-align: center;
  display: flex;
  flex-direction: column;
}

.userinfo-avatar {
  width: 250rpx;
  height: 250rpx;
  margin: 60rpx auto;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.userinfo-address {
  font-size: 12px;
  color: #aaa;
}

.swiper {
  height: 100rpx;
  width: 80%;
  background-color: #fff;
  position: absolute;
  z-index: 2;
  bottom: -60rpx;
  border-radius: 10rpx;
  padding: 15rpx;
  display: flex;
  flex-direction: row;
}

swiper {
  width: 100rpx;
  height: 100rpx;
  overflow: visible;
}

.swiper swiper swiper-item,
swiper image {
  width: 100rpx;
  height: 100rpx;
}

.weather-wrap {
  margin-left: 20rpx;
  color: #333;
  font-size: 24px;
  line-height: 100rpx;
}
.weather-wrap text{
  margin-left: 30rpx;
}
.usermotto {
  height: 700rpx;
  width: 100%;
  background-color: #f0f4f8;
}

.start-button {
  margin-top: 350px;
  text-align: center;
  background-color: #fff;
  border-radius: 10px;
  padding: 10px;
  box-shadow: 5px 5px 10px #ccc;
}

.start-button button {
  background-color: #7a6ed5;
  width: 90px;
  border-radius: 20px;
  border: none;
  color: #fff;
  margin-top: 20px;
}

.start-button span {
  color: #4f3dbe;
  font-size: 24px;
}

.start-button:active button {
  opacity: .7;
}